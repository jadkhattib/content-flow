# ===========================================
# PERCEPTION.FLOW - ENVIRONMENT VARIABLES
# ===========================================

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ===========================================
# DEVELOPMENT MODE (LOCALHOST ONLY)
# ===========================================

# For local development - bypasses Cloud Run authentication
# DEVELOPMENT_MODE=true
# DEV_USER_EMAIL=your-email@domain.com

# ===========================================
# API KEYS - REQUIRED FOR FULL FUNCTIONALITY
# ===========================================

# OpenAI API for AI-powered analysis (REQUIRED)
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Perplexity API for deep research (REQUIRED)
PERPLEXITY_API_KEY=pplx-your-perplexity-key-here

# Brandwatch API for social listening (OPTIONAL)
BRANDWATCH_TOKEN=your-brandwatch-token-here
BRANDWATCH_USERNAME=your-brandwatch-username
BRANDWATCH_PASSWORD=your-brandwatch-password
BRANDWATCH_PROJECT_ID=your-project-id

# ===========================================
# GOOGLE CLOUD / BIGQUERY (OPTIONAL)
# ===========================================

# BigQuery for data storage and analytics
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_CLOUD_PROJECT_ID=discovery-flow
BIGQUERY_DATASET_ID=content_df
BIGQUERY_TABLE_ID=perception

# ===========================================
# ADDITIONAL APIS (OPTIONAL)
# ===========================================

# SERP API for search data
SERP_API_KEY=your-serp-api-key

# Additional research APIs
SOCIAL_MEDIA_API_KEY=your-social-media-key

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# For production deployments
VERCEL_URL=your-vercel-url
RAILWAY_URL=your-railway-url
SUPABASE_URL=your-supabase-url 
